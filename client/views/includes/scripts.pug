script.
	$('#mobile-menu').click((e) => {
		$('#menu').slideToggle('fast');
	});

	// This needs to be here because sidebar.pug can't run jQuery
	$('#social-github').click((e) => umami.trackEvent('github', 'social-click'));
	$('#social-email').click((e) => umami.trackEvent('email', 'social-click'));
	$('#social-dev-to').click((e) => umami.trackEvent('dev-to', 'social-click'));
	$('#social-twitter').click((e) => umami.trackEvent('twitter', 'social-click'));

